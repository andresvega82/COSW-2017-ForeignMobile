<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.eci.com.foreignmobile.ui.activity.NewTutorialActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <!--Nueva tutoria-->
    <include layout="@layout/content_new_tutorial"
        android:id="@+id/content_new_tutorial"
        android:visibility="invisible"/>
    <include layout="@layout/content_new_tutorial2"
        android:id="@+id/content_new_tutorial2"
        android:visibility="invisible"/>
    <include layout="@layout/content_new_tutorial3"
        android:id="@+id/content_new_tutorial3"
        android:visibility="invisible"/>

    <!-- otras vistas-->
    <include layout="@layout/activity_my_tutorials"
        android:id="@+id/activity_my_tutorials"
        android:visibility="invisible"/>

    <include layout="@layout/activity_my_tutorials2"
        android:id="@+id/activity_my_tutorials2"
        android:visibility="visible"/>

    <include layout="@layout/activity_historial"
        android:id="@+id/activity_historial"
        android:visibility="invisible"/>

    <!--  <include layout="@layout/activity_profile"
          android:id="@+id/activity_profile"
          android:visibility="invisible"/>
  <android.support.design.widget.FloatingActionButton
          android:id="@+id/fab"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|end"
          android:layout_margin="@dimen/fab_margin"
          app:srcCompat="@android:drawable/ic_dialog_email" />
       -->
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navegation"
        tools:layout_editor_absoluteY="33dp"
        tools:layout_editor_absoluteX="8dp" >

    </android.support.design.widget.BottomNavigationView>


</android.support.design.widget.CoordinatorLayout>
